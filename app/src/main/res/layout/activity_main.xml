<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pabi.mybirthdaycard.MainActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="192dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/happybday"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="74dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="192dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView9"
        android:layout_toLeftOf="@+id/imageView7"
        android:layout_toStartOf="@+id/imageView7"
        app:srcCompat="@drawable/minionbirthday"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:fontFamily="cursive"
        android:text="@string/my_best_text"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="386dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/bdayandroid"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="119dp"
        android:text="This angels are coming your way! \n With lots of Love from me to to say... HaPpY BiRtHaDay!"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="300dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="cursive"
        android:text="FrOm:  MomMy"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="461dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/bdayangel1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/bdayangel3"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
